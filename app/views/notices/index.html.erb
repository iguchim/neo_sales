<h4 align="center">情報共有</h4>
<div class="container">
<div class="row">

<table class="table table-striped">
    <thead>
      <tr>
        <th>項番</th>
        <th>日付</th>
        <th>種別</th>
        <th>内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @notices.each do |notice| %>
        <tr>
          <td><%= link_to("#{notice.id}", notice_path(notice, from: "index")) %></td>
          <td><%= notice.notice_date.strftime('%Y/%m/%d') %></td>
          <td><%= notice_category_name(notice.notice_category_id) %></td>
          <td><%= notice.contents.truncate(40) %></td>
          <% if no_notice_comments?(notice.id, notice.user_id) %>
            <td><%= link_to '削除', notice_path(notice), method: :delete, data: {confirm: '本当に削除しますか？'}, class: 'btn btn-danger' %>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '新規', new_notice_path, class: 'btn btn-primary' %>
</div>
</div>